{
  'env': {
    'es6': true,
    'node': true,
    'browser': true
  },
  'extends': ['standard'],
  'ecmaFeatures': {
    'jsx': true,
    'experimentalObjectRestSpread': true
  },
  'parserOptions': {
    'sourceType': 'module'
  },
  'plugins': [ 'react' ],
  'rules': {
    'indent': [2, 2],
    'quotes': [2, 'single'],
    'linebreak-style': [2, 'unix'],
    'semi': [2, 'never'],
    'react/jsx-uses-react': 'error',
    'react/jsx-uses-vars': 'error'
  }
}
